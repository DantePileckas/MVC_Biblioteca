@{
    ViewData["Title"] = "Home Page";
}

<br />

<div class="d-sm-flex align-items-center justify-content-center mb-4">
    <h1 class="h3 mb-0 text-gray-800">¡Gestiona tu Biblioteca!</h1>
</div>

<div class="d-sm-flex align-items-center justify-content-center mb-4">
    <h4>Acá podrás llevar un control de:</h4>
</div>

<br />
<br />
<!-- Fila -->
<div class="row align-items-center justify-content-center">
    <!-- Total de Libros -->
    <div class="col-xl-3 col-md-6 mb-4">
        <div class="card border-left-primary shadow h-100 py-2">
            <div class="card-body">
                <div class="row no-gutters align-items-center">
                    <div class="col mr-2">
                        <div class="text-center text-xs font-weight-bold text-primary text-uppercase mb-1">
                            Total Libros
                        </div>
                    </div>
                    <div class="col-auto">
                        <i class="fas fa-book fa-2x text-black-50"></i>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- Lectores Registrados-->
    <div class="col-xl-3 col-md-6 mb-4">
        <div class="card border-left-success shadow h-100 py-2">
            <div class="card-body">
                <div class="row no-gutters align-items-center">
                    <div class="col mr-2">
                        <div class="text-center text-xs font-weight-bold text-success text-uppercase mb-1">
                            Cantidad Lectores
                        </div>
                    </div>
                    <div class="col-auto">
                        <i class="fas fa-users fa-2x text-black-50"></i>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- Prestamos Registrados -->
    <div class="col-xl-3 col-md-6 mb-4">
        <div class="card border-left-info shadow h-100 py-2">
            <div class="card-body">
                <div class="row no-gutters align-items-center">
                    <div class="col mr-2">
                        <div class="text-center text-xs font-weight-bold text-info text-uppercase mb-1">
                            Prestamos
                        </div>
                    </div>
                    <div class="col-auto">
                        <i class="fas fa-clipboard-list fa-2x text-black-50"></i>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
