@model IEnumerable<Biblioteca.Models.Libro>

@{
    ViewData["Title"] = "Libros";
}



<h1>Gestión de Libros</h1>

<br />

<form asp-controller="Libros" asp-action="index" method="get" class="form-inline my-2 my-lg-0">
    <input class="form-control mr-sm-2" type="text" name="SearchString" placeholder="Título del Libro">
    <button value="filter" type="submit">Buscar</button>
</form>

<br />

<div class="card shadow mb-4">
    <div class="card-header py-3 bg-primary">
        <h6 class="m-0 font-weight-bold text-white">Lista de Lectores</h6>
    </div>
    <div class="card-body">
        <div class="row">
            <div class="col-sm-12">
                <a class="btn btn-primary" type="button" asp-action="Create">Crear Nuevo Libro</a>
            </div>
        </div>
        <hr />
        <div class="row">
            <div class="col-sm-12">
                <div class="table-responsive">
                    <table class="table table-bordered" id="tabla" style="width:100%" cellspacing="0">
                        <thead>
                            <tr>
                                <th>
                                    @Html.DisplayNameFor(model => model.Titulo)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.Autor)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.Ejemplares)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.Disponibilidad)
                                </th>
                                <th>Acciones</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Titulo)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Autor)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Ejemplares)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Disponibilidad)
                                    </td>
                                    <td>
                                        <a class="btn btn-success" type="button" asp-action="Edit" asp-route-id="@item.IdLibro">Editar</a>
                                        <a class="btn btn-info" type="button" asp-action="Details" asp-route-id="@item.IdLibro">Visualizar</a>
                                        <a class="btn btn-danger" type="button" asp-action="Delete" asp-route-id="@item.IdLibro">Eliminar</a>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>

    </div>
</div>


