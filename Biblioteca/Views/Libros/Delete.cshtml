@model Biblioteca.Models.Libro

@{
    ViewData["Title"] = "Delete";
}

<h1>Delete</h1>

<h3>Are you sure you want to delete this?</h3>
<div>
    <h4>Libro</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Titulo)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Titulo)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Autor)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Autor)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Ejemplares)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Ejemplares)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.rutaImagen)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.rutaImagen)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Estado)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Estado)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="IdLibro" />
        <input type="submit" value="Delete" class="btn btn-danger" /> 
        <br />
        <br />

        <div>
            <a asp-action="Index">
                <span><img style="margin: 0; display: inline-block; height: 40px; float: none;" src="~/img/iconoAtras - Copia.png" /></span>
            </a>
        </div>
    </form>
</div>
